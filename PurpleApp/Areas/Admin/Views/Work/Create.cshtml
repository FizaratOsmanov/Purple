@using PurpleApp.Models
@model Work

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="form-group">
        <label asp-for="MainImageUrl"></label>
        <input class="form-control" asp-for="MainImageUrl">
    </div>
    <select class="form-select" asp-for="Service" asp-items="ViewBag.Services" id="ServiceId">
        <option selected value="">Services</option>
    </select>
    <div>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>